            <script>
               var indexValue = 0;
               function slideShow(){
                 setTimeout(slideShow, 2500);
                 var x;
                 const img1= document.querySelectorAll(".img1");
                 for(x = 0; x < img1.length; x++){
                   img1[x].style.display = "none";
                 }
                 indexValue++;
                 if(indexValue > img1.length){indexValue = 1}
                 img1[indexValue -1].style.display = "block";
               }
               slideShow();
            </script>


