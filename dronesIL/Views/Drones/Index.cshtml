@model IEnumerable<dronesIL.Models.Drone>

@{
    ViewData["Title"] = "Index";
}

<h1>Drones in stock</h1>

<p>
    <a asp-action="Create"> Add new drone  </a>
</p>
<table class="table" style="text-align:center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdateDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.droneId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.droneId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.droneId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
