@model dronesIL.Models.user


@{
    ViewData["Title"] = "Create";
}
<style>
    .label {
        color: black;
    }

    .col-md-4 {
        position: center;
    }

    h1 {
        color: black;
    }
</style>
<header>
    <button class="close" data-dismiss="modal">&times;</button>
     <h1  style="text-align:center;"style="direction:rtl">הרשמה ל DronesIL</h1>

</header>


<hr />

<div class="col-md-8 mx-auto" style="text-align:right;">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="firstName" class="control-label label">שם פרטי:</label>
            <input asp-for="firstName" class="form-control" />
            <span asp-validation-for="firstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="lastName" class="control-label label">שם משפחה:</label>
            <input asp-for="lastName" class="form-control" />
            <span asp-validation-for="lastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="mail" class="control-label label">כתובת מייל:</label>
            <input asp-for="mail" class="form-control" />
            <span asp-validation-for="mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="phoneNumber" class="control-label label">מספר טלפון:</label>
            <input asp-for="phoneNumber" class="form-control" />
            <span asp-validation-for="phoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="password" class="control-label label">סיסמה:</label>
            <input asp-for="password" class="form-control" />
            <span asp-validation-for="password" class="text-danger"></span>


        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
