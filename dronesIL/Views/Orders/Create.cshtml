@model dronesIL.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>סל</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="street" class="control-label"></label>
                <input asp-for="street" class="form-control" />
                <span asp-validation-for="street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="streetNum" class="control-label"></label>
                <input asp-for="streetNum" class="form-control" />
                <span asp-validation-for="streetNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sum" class="control-label"></label>
                <span asp-for="sum" class="form-control" >@Model.sum</span>
                <span asp-validation-for="sum" class="text-danger"></span>
            </div>    
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div style="margin-right:50%;">
        <h4>פריטים</h4>
        @if (Model != null)
        {
            if (Model.drones != null)
            {
                @foreach (Drone drone in Model.drones)
                {
    <div class="form-group">
        <label for="droneItem">שם</label>
        <span id="droneName" asp-for="drones" class="control-label">@drone.name</span>
        <br />
        <label for="dronePrice">מחיר</label>
        <span asp-for="dronePrice" class="control-label">@drone.price</span>
    </div>
                }
            }
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
