@model dronesIL.Models.Order

@{
    ViewData["Title"] = "Create";
}
<style>
.row{
    background-color: whitesmoke;
    width: 80%;
}
    .CartTd{
        padding-left:35px;
        text-align: center;
    }
    .CartTr{
        height:60px;
        text-align: center;
    }
    .RemoveFromCart{
 -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
         box-shadow: 0 2px 10px rgba(0,0,0,.2);
         color: #fff;
         background: #2b96de;
         border-radius: 13px;
    }
    button :hover{
    background-color:#4095c6;
    
    }
    
    .row {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: inherit;
        margin-right: -15px;
        margin-left: -15px;
    }

    
      .btn-primary{
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
         box-shadow: 0 2px 10px rgba(0,0,0,.2);
         color: #fff;
         background: #2b96de;
         border-radius: 13px;
         margin-top: 20%;

       }
       
       h1 {
           color: black;
           text-shadow: 2px 2px 5px grey;
           margin-top: 2%;
           margin-bottom: 2%;
       }
    
     #btn-sum{
               border-color: black;
               background-color:rgba(43 ,150 ,222 ,0.15);
               padding: 4px;
               border-radius: 31px;
               box-shadow: -11px 16px 27px 5px #b7b0b0;
               margin-top: 7%;
               
           }
    
   
    
</style>
<script>
    var script = document.createElement('script');
    script.src = 'https://code.jquery.com/jquery-3.4.1.min.js';
    script.type = 'text/javascript';
    document.getElementsByTagName('head')[0].appendChild(script);
    $('#OrderForm').submit(function () {
        debugger;
        localStorage['cart'] = null;
        var sum =@Model.Sum;
        $('#sum').val(sum.toFixed(2));
        console.log($('#Sum').val());
        return true; // return false to cancel form action
    });

</script>
<h1 style="text-align:center;">סל הקניות שלי</h1>


@if (this.Model.drones.Count != 0)
{
    <hr/>
    <div class="row" >
        <div class="col-md-4" style="text-align:right;">
            <form asp-action="Create" id="OrderForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="city" class="control-label">עיר</label>
                    <input asp-for="city" class="form-control"/>
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="street" class="control-label">רחוב</label>
                    <input asp-for="street" class="form-control"/>
                    <span asp-validation-for="street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="streetNum" class="control-label">מספר</label>
                    <input asp-for="streetNum" class="form-control"/>
                    <span asp-validation-for="streetNum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sum" class="control-label">סה"כ בשקל</label>
                    <input asp-for="Sum" value="@Model.Sum"  class="form-control" style="margin-right:0px;"/>
                    <span asp-validation-for="Sum" class="text-danger"></span>
                </div>

            </form>
        </div>
        <div style="margin-right:30%;">
            <h4 style="text-align:center;">פריטים</h4>
            @if (Model != null)
            {
                if (Model.drones != null)
                {
                    <table >
                        <tr>
                            <td class="CartTd" style="text-align: center; text-decoration: underline">שם</td>
                            <td class="CartTd">מחיר</td>
                        </tr>
                        @foreach (Drone drone in Model.drones)
                        {
                            <tr class="CartTr">
                                <td class="CartTd">
                                    @drone.name
                                </td>
                                <td class="CartTd">
                                    @drone.price
                                </td>
                                <td class="CartTd">
                                    <button class="RemoveFromCart" id="RemoveFromCart"   onclick="RemoveFromCart(@drone.droneId)">
                                        הסר
                                    </button>
                                </td>
                            </tr>
                        }
                    </table>
                    <div id="btn-sum" style="border-color: black ;  ">
                        <p style="text-align: center;">   @Model.drones.Count פריטים בסל זה </p>
                        <p style=" text-align: center;"> סה״כ בשקלים  @Model.Sum   </p>  
                        
                    </div>
                  
                }
            }
        </div>
    </div>
}
else
{
    <h1 style="text-align:center;">הסל ריק</h1>
    <div style="text-align: center"> <a style="color: red; text-decoration:blink"> עדיין לא בחרת רחפן ? <a asp-controller="DronesSearch" asp-action="Index">לחץ כאן ותתחיל בקניות  </a>
        </a></div>
    }

                <div class="row" style="margin: auto">
                    <input type="submit" value="אישור הזמנה" class="btn btn-primary"/>
                </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
