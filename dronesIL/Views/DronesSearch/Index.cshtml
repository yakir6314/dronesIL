@using Newtonsoft.Json;
@model IEnumerable<dronesIL.Models.Drone>

<style>




    .square-set,
    .square {
        border-radius: 15px;

    }

    .square-set {
        background: darkgrey;
    }
    img{
        max-width:250px;
    }

    .tooltiptext{
        display:none;
    }
    .searchInput{
        width:97%;
        height:45px;
    }

    .card{
    align-items: center;
    margin:10%;
    align-content: center;
    }
    .card-img{
        width: 100%;
        height: 15vw;
        object-fit: fill;
    }
    .card-deck{
        margin-top: 10px;
        margin-left: auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        grid-gap: 8.5rem;
    }
   
</style>
<script>
    var model = @Html.Raw(@JsonConvert.SerializeObject(Model));
    var cart;
    var stored = localStorage['cart'];
    if (stored != 'null') {
        if (stored) {
            cart = JSON.parse(stored);
        }
    }
    else {
        cart = new Array();
    }
    function addToCart(droneId) {
        var selectedDrone = model.find(f => f.droneId == droneId);
        if (selectedDrone != null) {
            cart.push(selectedDrone);
            localStorage['cart'] = JSON.stringify(cart);
            alert("הרחפן נוסף בהצלחה לסל");
            
        }
    }
</script>


    <div id="SearchDiv" style="padding: 20px">
        <input type="text"  class="searchInput" id="myInput" onkeyup="searchKeyPress()" placeholder="חיפוש רחפן לפי דגם">
    </div>
    <div>
        <span id="noDrones" style="display:none;">מצטערים לא מצאנו רחפנים מדגם זה</span>
    </div>
    
<div class="card-deck ">
    @foreach (Drone d in Model)
        {
            <div class="card ">
                <div class="card-header">
                    <span id="droneName">@d.name</span>
                </div>

                <div class="card-body">
                    <div class="card-img">
                        <img class="card-img" data-toggle="tooltip" data-placement="top"  title="@d.description" src="@d.imageUrl"/>
                    </div>
                </div>
                 <span class="card-text" style="text-align-all:center; direction: rtl">מחיר : @d.price </span>
                <div class="card-footer">
                    <button id="@d.droneId"  data-target="#droneModal"  data-toggle="modal" >
                        מידע נוסף
                    </button>
                     <div class="modal" id="droneModal" tabindex="2" style="z-index:1041;">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">@d.name</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-2">
                                            <img class="img-responsive" style="margin:0 auto;" src="@d.imageUrl">
                                        </div>
                                        <div style="margin-right:30%;">
                                            <p>@d.description</p>
                                        </div>
                                   
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <span  style="margin-inline:10% ; text-align-all:center; direction: rtl">מחיר : @d.price </span>
                                    <button id="@d.droneId" onclick="addToCart(this.id)">
                                        הוסף לסל
                                        <img src="~/svg/addtocartsvg.svg" style="width:30px;margin:8px;"/>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>


                                <button id="@d.droneId" onclick="addToCart(this.id)">
                                    הוסף לסל
                                    <img src="~/svg/addtocartsvg.svg" style="width:30px;margin:8px;"/>
                                </button>
                            </div>
                        </div>
        }

    </div>